module dec;
    reg [2:0] s;       // Dimensiune ajustat? pentru a permite valori de la 0 la 7
    reg e;
    wire [3:0] y;

    // Instan?ierea modulului `dec` (trebuie s? fie definit în alt? parte)
    dec cut (
        .s(s), 
        .e(e), 
        .y(y)
