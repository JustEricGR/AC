    integer i;          // Variabil? pentru bucla `for`
    initial begin
        {s, e} = 0;     // Ini?ializare la 0

        for (i = 0; i < 8; i = i + 1) begin
            #20 s = i;  // Actualizarea semnalului `s` la fiecare 20 de unit??i de timp
        //end
